<%= render 'layouts/navbar' %>
<div id="content">
  <div class="container">
    <div class="row">
      <div class="col-md-8 col-md-offset-2">
        <ol class="breadcrumb">
          <li><a href="#">Home</a></li>
          <li><a href="#">Account</a></li>
          <li><a href="#">Login</a></li>
        </ol>
        <h1 class="page-header">Porfavor ingrese los datos de Promotor</h1>
      </div>
    </div>
    <div class="row">
      <div class="col-md-8 col-md-offset-2">
        <ul class="nav nav-tabs tab-lg" role="tablist">
          <li role="presentation" class="active">
            <a href="register.html">
              Promotor
            </a>
          </li>
        </ul>
        <div class="tab-content">
          <div role="tabpanel" class="tab-pane active" id="register">

            <%= form_for @promoter do |f| %>
              <% if @promoter.errors.any? %>
                <div id="errors_explanation">
                  <h2><%= pluralize(@promoter.errors.count, "error") %> prohibited this promoter from being saved:</h2>
                  <ul>
                    <% @promoter.errors.full_messages.each do |message| %>
                      <li><%= message %></li>
                    <% end %>
                  </ul>
                </div>
              <% end %>
              <div class="form-group">
                <%= f.label :city_id, 'Ciudad de Residencia:' %><br />
                <%= f.collection_select :city_id, City.order(:city), :id, :city, {include_blank: true}, {autofocus: true, class: 'form-control', required: true} %>
              </div>
              <div class="form-group">
                <%= f.label 'Telefono' %><br />
                <%= f.telephone_field :phone, {class: "form-control input-lg", required: true, placeholder: "Su Teléfono"} %>
              </div>
              <div class="form-group">
                <%= f.label 'Dirección' %><br />
                <%= f.text_field :address, {class: "form-control input-lg", required: true, placeholder: "Su Direccion"} %>
              </div>
              <div class="field form-group">
                <%= f.label 'Acerca de Mí' %><br />
                <%= f.text_area(:description, size: '24x6', class: 'form-control input-lg', required: true) %>
              </div>
              <div class="field form-group">
                <%= f.label 'Foto del Perfil' %><br />
                <%= f.file_field :photo %>
              </div>
              <button type="submit" class="btn btn-primary btn-lg">Registrarme</button>
            <% end %>

          </div>
        </div>
        <div> </div>
      </div>
    </div>
  </div>
</div>
<%= render 'layouts/footer' %>
<script type="text/javascript">
$(function () {
	$('[data-toggle="tooltip"]').tooltip({container: 'body'});
	//$('[data-toggle="tooltip"]').tooltip()
})
</script> 
<script type="text/javascript">
AOS.init({
	offset: 30
});
</script> 
<script>
var footer_height = $('#footer').outerHeight() + 30;
if (document.getElementById('sidebar')) {
	$(document).ready(function() {
	  $.stickysidebarscroll("#sidebar",{offset: {top: 20, bottom: footer_height}});
	});
};
</script>
</body></html>